<div class = 'new_rating_form'>
	<%= simple_form_for (@rating), :html => { :class => 'form-horizontal'} do |f| %>
	  <%= f.hidden_field :product_id, :value => @rating.product_id %>
	  <div class = 'pull_left'>
	    <%= f.input :rating,:collection => 1..5, :as => :radio_buttons  %>
	  </div>
	  <%= f.submit :value => "Submit" , :class => 'btn btn-mini btn-success' %>
	  <%= link_to 'Cancel', '', :class => 'btn btn-mini btn-inverse'  %>
	<% end %>
</div>