<div>
  <h3>Edit Account <%= @user.username  %>   </h3>
	<%= simple_form_for (@user), :html => { :class => 'form-horizontal'} do |f| %>
	  <%= f.input :username %>
	  <%= f.input :email  %>
      <%= f.input :password, :required => true %>
	  <%= f.submit :class => "btn btn-success"%>
	  <%= link_to 'cancel', request.referrer, :class => 'btn btn-inverse'  %>
	<% end %> 
</div>