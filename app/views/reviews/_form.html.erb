<div class = 'new_review_form'>
  <%= simple_form_for (@review), :html => { :class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :product_id, :value => @review.product_id %>
    <div class = 'pull_left'>
      <%= f.input :review, :input_html => { :class => 'review_textarea'} %>
    </div>
    <%= f.submit :class => 'btn btn-mini btn-success', :value => 'Submit' %>
    <%= link_to 'Cancel', '', :class => 'btn btn-mini btn-inverse'  %>
  <% end %>
</div>