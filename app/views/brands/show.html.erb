<div>
  <h4><%= @brand.brand.capitalize %></h4>
  <% pro = @brand.products & @cat.products %>
  <% unless pro.nil? %>
    <% pro.each do |p|  %>
      <div>
        <%= link_to image_tag(p.images.first.image.url(:thumb)), product_path(p) %><br/>
        <%= p.product %><br/>
        Best buy: <%= p.price %>
      </div>
    <% end %>
  <% end %>  
</div>