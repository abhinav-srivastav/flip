<div>
  <dl class  = "dl-horizontal" >      
    <dt>Category Name:</dt>
    <dd><%= @cat.category %></dd>
  </dl>
  <dl class  = "dl-horizontal" >      
    <dt>Brand Name:</dt>
    <dd><%= @brand.brand %></dd>   
  </dl>
  <dl class  = "dl-horizontal" >      
    <% pro = @brand.products & @cat.products %>
    <% unless pro.nil? %>
      <dt>Products</dt>
      <% pro.each do |p|  %>
        <dd><%= link_to image_tag(p.images.first.image.url(:thumb)), product_path(p) %>
          <%= p.product %></dd>
      <% end %>
    <% end %>
  </dl>  
</div>