<div>
  <h3>Users</h3>
  <%#= link_to "New Users", new_admin_user_path,:class => "btn btn-primary" %>
  <br/><br/>
  <table class = 'table table-striped'>
  	<tr>
  		<td><b>Username</b></td>
  		<td><b>Wallet</b></td>
  		<td><b>Email</b></td>
      <td class='shift_right'><b>Actions</b></td>
  	</tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.wallet %></td>
      <td><%= user.email %></td>
      <td class='shift_right'>
        <%= link_to "edit", edit_admin_user_path(user), :class => "btn btn-small" %>
        <%= link_to "transactions", user_transactions_path(:user => user), :class => "btn btn-primary btn-small" %>
        <%= link_to "remove", admin_user_path(user), method: :delete, data: { confirm: "Are u sure ?" },:class =>"btn btn-danger btn-small" %>
       </td>
    </tr>
    <% end %>
  </table>
</div>