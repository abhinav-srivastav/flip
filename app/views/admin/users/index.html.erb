<div>
  <h3>Users</h3>
  <%= link_to "New Users", new_admin_user_path,:class => "btn btn-primary" %><br/><br/>
  <table class = 'table'>
  	<tr>
  		<td><b>Username</b></td>
  		<td><b>Wallet</b></td>
  		<td><b>Email</b></td>
      <td><b>Actions</b></td>
  	</tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.wallet %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to "show",  :class => "btn btn-small" %>
        <%= link_to "edit", :class => "btn btn-small" %>
        <%= link_to "remove", data: { confirm: "Are u sure ?" },:class =>"btn btn-danger btn-small" %>
       </td>
    </tr>
    <% end %>
  </table>
</div>