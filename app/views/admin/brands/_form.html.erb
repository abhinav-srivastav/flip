<%= simple_form_for ([:admin,@brand]), :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.input :brand %>
  <%= f.association :products, :label_method => :product, :as => :check_boxes %>
  <%= f.association :categories, :label_method => :category, :as => :check_boxes %>
  <%=f.submit :class => "btn btn-success"%>
  <%= link_to 'back', request.referrer, :class => 'btn btn-inverse'  %>
<% end %> 