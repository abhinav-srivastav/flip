<%= simple_form_for ([:admin,@category]), :html => { :class => 'form-horizontal'} do |f| %>
  <%= f.input :parent_id, :collection => Category.root(), :label_method => :category %>
  <%= f.input :category %>
  <%= f.input :visible %>
  <%= f.association :products, :label_method => :product, :as => :check_boxes %>
  <%= f.association :brands, :label_method => :brand, :as => :check_boxes %>
  <%= f.submit :class => "btn btn-success"%>
  <%= link_to 'back', admin_categories_path, :class => 'btn btn-inverse'  %>
<% end %> 