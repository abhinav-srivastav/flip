<div class = 'new_comment_form'>
  <%= simple_form_for (@comment), :html => { :class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :product_id, :value => @comment.product_id %>
    <div class = 'pull_left'>
      <%= f.input :comment, :input_html => { :class => 'comment_textarea'} %>
    </div>
    <%= f.submit :class => 'btn btn-mini btn-success', :value => 'Submit' %>
    <%= link_to 'Cancel', '', :class => 'btn btn-mini btn-inverse'  %>
  <% end %>
</div>