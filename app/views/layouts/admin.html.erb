          <li><%= link_to 'Attributes', admin_product_attributes_path %></li>
          <li><%= link_to 'Prototypes', admin_prototypes_path %></li>
          <li><%= link_to 'Colours', admin_colours_path %></li>
          <li><%= link_to 'Sizes', admin_sizes_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
  <div class = "container-fluid">
    <div class = "row-fluid">
      <% flash.each do |name,msg|    %>
        <div class = "alert alert-<%= name %>">
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
          <p id =  "notice" ><%= msg %></p>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>

</body>
</html>
