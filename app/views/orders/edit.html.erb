<div>
  <dl class  = "dl-horizontal" >      
    <dt>Order For:</dt>
    <dd><%= @order.user.username %></dd>
  </dl>
  <dl class  = "dl-horizontal" >      
    <dt>Ordered Products:</dt>
    <dd>
      <ul>    	          
        <li>
          <table class='table'>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
            <% @order.line_items.each do |line| %>
            <tr id="<%= line.id%>">
              <td><%= line.product.product %> :<%= line.product.brand.brand %> </td>
              <td><div><%= line.quantity %>&nbsp;&nbsp;&nbsp;<span><%= link_to 'change'%></span></div></td>
              <!-- <td><%= line.price %><button type="button" class="close remove_line_item" >×</button></td> -->
              <td><%= line.price %>  <%= link_to '×', line_item_path(line),  method: :delete, data: { confirm: 'Are you sure?' } %></td>                
            </tr>
            <%end%>
            <tr>
              <td></td>
              <td><span class = 'pull-right'><b>Total Amount:</b></span></td>
              <td><b><%= @order.amount %></b></td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td><%= link_to 'Confirm Order', edit_order_path(@order), :class => 'btn btn-small btn-success' %></td>
              <%#= button_to 'Pay', pay_order_path(@order), :class=> 'btn btn-success' %>
            </tr>
          </table>          
        </li>
      </ul>
    </dd>
  </dl>
</div>