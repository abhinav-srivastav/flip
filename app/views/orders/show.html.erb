<div>
  <dl class  = "dl-horizontal" >      
    <dt>Order For:</dt>
    <dd><%= @order.user.username %></dd>
  </dl>
  <dl class  = "dl-horizontal" >      
    <dt>Order Status:</dt>
    <dd><%= @order.state %></dd>
  </dl>
  <% if @order.address %>
  <dl class  = "dl-horizontal" >      
    <dt>Address:</dt>
    <dd>
      <%= @order.address.name %>, 
      <%= @order.address.street_no %>,
      <%= @order.address.area %>, 
      <%= @order.address.city %>-<%= @order.address.postal_code %> ,
      <%= @order.address.country %>   
    </dd>
  </dl>
  <% end %>
  <table class='table'>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <% @order.line_items.each do |line| %>
    <tr id="<%= line.id%>">
      <td>
        <%= line.varient.product.product %>
        <span class='muted'><%= 'Colour: '+ line.varient.colour.colour if line.varient.colour %> <%= 'Size: '+ line.varient.size.size if line.varient.size %></span>
      </td>
      <td><%= line.quantity %></td>
      <td><%= line.price %></td>                
    </tr>
    <%end%>
    <% if @order.line_items.any?  %>
      <tr>
        <td></td>
        <td><span class = 'pull-right'><b>Shipping Charges:</b></span></td>
        <td >30.0</td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td><span class = 'pull-right'><b>Total Amount:</b></span></td>
      <td><b><%= @order.amount %></b></td>
    <tr>
  </table>  
  <%= link_to 'back', orders_path, :class => 'btn '  %>        
  </div>